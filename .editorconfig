# EditorConfig - https://editorconfig.org
# Ensures consistent coding styles across different editors and IDEs

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C/C++ source files
[*.{c,h,cpp,hpp,cu,cuh}]
indent_size = 4
max_line_length = 100

# CMake files
[CMakeLists.txt]
indent_size = 4

[*.cmake]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 4
end_of_line = lf

# Batch scripts (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML (GitHub Actions)
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab
