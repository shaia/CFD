{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build with full debugging information",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_EXAMPLES": "ON",
                "BUILD_TESTS": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Optimized release build",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_EXAMPLES": "ON",
                "BUILD_TESTS": "OFF"
            }
        },
        {
            "name": "relwithdebinfo",
            "displayName": "Release with Debug Info",
            "description": "Optimized build with debug symbols",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "BUILD_EXAMPLES": "ON",
                "BUILD_TESTS": "OFF"
            }
        },
        {
            "name": "ci",
            "displayName": "CI Build",
            "description": "Build configuration for continuous integration",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_EXAMPLES": "ON",
                "BUILD_TESTS": "ON",
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_POSITION_INDEPENDENT_CODE": "ON"
            }
        },
        {
            "name": "sanitize",
            "displayName": "Sanitizers",
            "description": "Debug build with AddressSanitizer and UndefinedBehaviorSanitizer",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_EXAMPLES": "ON",
                "BUILD_TESTS": "ON",
                "ENABLE_ASAN": "ON",
                "ENABLE_UBSAN": "ON"
            }
        },
        {
            "name": "coverage",
            "displayName": "Coverage",
            "description": "Debug build with code coverage instrumentation",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_EXAMPLES": "OFF",
                "BUILD_TESTS": "ON",
                "ENABLE_COVERAGE": "ON"
            }
        },
        {
            "name": "windows-msvc",
            "displayName": "Windows MSVC",
            "description": "Windows build with Visual Studio",
            "inherits": "base",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            },
            "binaryDir": "${sourceDir}/build",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "BUILD_EXAMPLES": "ON",
                "BUILD_TESTS": "ON",
                "CFD_ENABLE_CUDA": "ON",
                "CMAKE_CUDA_ARCHITECTURES": "native"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Debug Build",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "displayName": "Release Build",
            "configurePreset": "release"
        },
        {
            "name": "relwithdebinfo",
            "displayName": "RelWithDebInfo Build",
            "configurePreset": "relwithdebinfo"
        },
        {
            "name": "ci",
            "displayName": "CI Build",
            "configurePreset": "ci"
        },
        {
            "name": "sanitize",
            "displayName": "Sanitizers Build",
            "configurePreset": "sanitize"
        },
        {
            "name": "coverage",
            "displayName": "Coverage Build",
            "configurePreset": "coverage"
        },
        {
            "name": "windows-msvc-debug",
            "displayName": "Windows MSVC Debug",
            "configurePreset": "windows-msvc",
            "configuration": "Debug"
        },
        {
            "name": "windows-msvc-release",
            "displayName": "Windows MSVC Release",
            "configurePreset": "windows-msvc",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "displayName": "Debug Tests",
            "configurePreset": "debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "ci",
            "displayName": "CI Tests",
            "configurePreset": "ci",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "sanitize",
            "displayName": "Sanitizer Tests",
            "configurePreset": "sanitize",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "coverage",
            "displayName": "Coverage Tests",
            "configurePreset": "coverage",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}