{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/main.c",
                "${workspaceFolder}/src/grid.c",
                "${workspaceFolder}/src/solver.c",
                "${workspaceFolder}/src/solver_optimized.c",
                "${workspaceFolder}/src/utils.c",
                "${workspaceFolder}/src/vtk_output.c",
                "-o",
                "${workspaceFolder}/build/cfd_framework",
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/gcc"
        }
    ]
}